<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_login_page_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".user.activitys.UserLoginPageActivity">


    <ImageView
        android:background="@drawable/khedma"
        android:layout_width="180dp"
        android:layout_height="180dp" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.example.bassam.khedmaapp.views.MyTextView
        android:layout_weight="0.25"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        android:text="رمز الدولة"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <com.example.bassam.khedmaapp.views.MyTextView
        android:layout_weight="0.75"
        android:textSize="20dp"
        android:text="رقم الهاتف"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLength="3"
            android:hint="96X"
            android:id="@+id/countryCodeEditTextUserLoginActivity"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextview"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:inputType="phone"
            android:gravity="center"
            android:layout_marginRight="5dp" />


    <EditText
        android:maxLength="9"
        android:hint="5XXXXXXXX"
        android:layout_weight="0.75"
        android:background="@drawable/edittextview"
        android:gravity="center"
        android:id="@+id/enterPhoneNumberEditTextUserLoginActivity"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:inputType="phone"
        android:layout_width="0dp"
        android:layout_height="50dp" />

        </LinearLayout>
    <com.example.bassam.khedmaapp.views.MyButton
        android:layout_marginTop="60dp"
        android:id="@+id/loginButtonUserLoginActivity"
        android:text="دخول"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/graybutton" />

    <com.example.bassam.khedmaapp.views.MyButton
        android:layout_marginTop="10dp"
        android:id="@+id/newUserButtonUserLoginActivity"
        android:text="مستخدم جديد"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/graybutton" />

</LinearLayout>
