<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:background="@drawable/background"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/activity_new_user_registration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context=".user.activitys.NewUserRegistrationActivity">

    <com.example.bassam.khedmaapp.views.MyTextView


        android:layout_gravity="center_horizontal"
        android:textSize="50dp"
        android:text="خدمة"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />
    <com.example.bassam.khedmaapp.views.MyTextView
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:text="تسجيل مستخدم جديد"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.example.bassam.khedmaapp.views.MyTextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="الاسم(الكُنية) "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.bassam.khedmaapp.views.MyEditText

        android:background="@drawable/edittextview"
        android:gravity="center"
        android:id="@+id/userNameEditTextNewUserRegistrationActivity"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout

        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.bassam.khedmaapp.views.MyTextView
            android:layout_weight="0.25"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:text="رمز الدولة"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <com.example.bassam.khedmaapp.views.MyTextView
            android:layout_weight="0.75"
            android:textSize="20dp"
            android:text="رقم الهاتف"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLength="3"
            android:hint="96X"
            android:id="@+id/countryCodeEditTextNewUserRegistrationActivity"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextview"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:inputType="phone"
            android:gravity="center"
            android:layout_marginRight="5dp" />


        <EditText
            android:maxLength="9"
            android:hint="5XXXXXXX"
            android:layout_weight="0.75"
            android:background="@drawable/edittextview"
            android:gravity="center"
            android:id="@+id/PhoneNumberEditTextNewUserRegistrationActivity"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:inputType="phone"
            android:layout_width="0dp"
            android:layout_height="50dp" />

    </LinearLayout>




    <com.example.bassam.khedmaapp.views.MyTextView
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text=" البريد الاكتروني"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.bassam.khedmaapp.views.MyEditText
        android:background="@drawable/edittextview"
        android:gravity="center"
        android:id="@+id/EmailEditTextNewUserRegistrationActivity"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.example.bassam.khedmaapp.views.MyButton
        android:layout_marginTop="60dp"
        android:id="@+id/DoneButtonNewUserRegistrationActivity"
        android:text="استمرار"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/graybutton"/>
    <com.example.bassam.khedmaapp.views.MyButton
        android:layout_marginTop="10dp"
        android:id="@+id/loginButtonNewUserRegistrationActivity"
        android:text=" تسجيل الدخول"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/graybutton"/>

</LinearLayout>
</ScrollView>